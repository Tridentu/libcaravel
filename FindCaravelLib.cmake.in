 
set(CARAVEL_SEARCH_PATHS
    @CMAKE_INSTALL_PREFIX@
)

find_path(CARAVEL_INCLUDE_DIR Caravel.h
    HINTS 
    $ENV{CARAVELDIR}
    PATH_SUFFIXES include/caravel include
    PATHS ${CARAVEL_SEARCH_PATHS}
)

find_library(CARAVEL_LIBRARY
    NAMES CaravelLib
    HINTS
    $ENV{CARAVELDIR}
    PATH_SUFFIXES lib64 lib
    PATH ${CARAVEL_SEARCH_PATHS}
)

include (FindPackageHandleStandardArgs)

FIND_PACKAGE_HANDLE_STANDARD_ARGS(CaravelLib REQUIRED_VARS CARAVEL_LIBRARY CARAVEL_INCLUDE_DIR)
